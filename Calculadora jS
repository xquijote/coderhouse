<head>
<title>Calculadora JS</title>
</head>
<body>

<script type="text/javascript">
operacion=-1;
while (operacion != 0) 
{
   var operacion=prompt("ELIGE LA OPERACIÓN \n\n\n0: FINALIZAR CALCULADORA\n1: SUMA\n2: RESTA\n3: MULTIPLICACIÓN\n4: DIVISION","");
  //SUMA, RESTA, MULTIPLICACIÓN, o DIVISION
  if (operacion>0 && operacion<5)
  {
  var num1=parseInt(prompt("Digital el primer número.",""));
  var num2=parseInt(prompt("Digita el segundo número.",""));
  if (operacion==1) alert("La suma es "+(num1+num2));
  if (operacion==2) alert("la diferencia es "+(num1-num2));
  if (operacion==3) alert("El resultado es"+(num1*num2));
  if (operacion==4) alert("El resultado es "+(num1/num2));
  }
  
}
</script>

</body>
</html>
